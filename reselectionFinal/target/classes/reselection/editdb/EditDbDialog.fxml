<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="reselection.editdb.EditDbController">
   <center>
      <TableView fx:id="table" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="col_id" prefWidth="75.0" text="Номер" />
          <TableColumn fx:id="col_mnfctrr" prefWidth="75.0" text="Производитель" />
            <TableColumn fx:id="col_model" prefWidth="75.0" sortable="false" text="Модель" />
            <TableColumn fx:id="col_vc" prefWidth="75.0" sortable="false" text="Артикул" />
            <TableColumn fx:id="col_anlgSiemens" prefWidth="75.0" sortable="false" text="Аналог от &quot;Сименс&quot;" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <top>
      <BorderPane BorderPane.alignment="CENTER">
         <right>
            <HBox alignment="TOP_RIGHT" prefHeight="40.0" prefWidth="400.0" spacing="20.0" BorderPane.alignment="CENTER">
               <children>
                  <Button alignment="TOP_CENTER" mnemonicParsing="false" onAction="#deleteEquipment" prefHeight="20.0" prefWidth="80.0" text="Удалить" />
                  <Button mnemonicParsing="false" onAction="#addEquipment" prefHeight="20.0" prefWidth="80.0" text="Добавить" />
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" top="8.0" />
               </padding>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </HBox>
         </right>
         <left>
            <HBox prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" prefHeight="20.0" prefWidth="80.0" text="На главную" />
               </children>
               <padding>
                  <Insets left="10.0" top="8.0" />
               </padding>
            </HBox>
         </left>
      </BorderPane>
   </top>
</BorderPane>
