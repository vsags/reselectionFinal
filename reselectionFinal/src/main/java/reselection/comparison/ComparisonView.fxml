<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="ComparisonBorderPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="reselection.comparison.ComparisonController">
   <center>
      <ScrollPane fx:id="CompareTab" fitToHeight="true" hbarPolicy="ALWAYS" prefHeight="600.0" prefWidth="447.0" BorderPane.alignment="CENTER">
         <content>
            <HBox fx:id="CompareBox" />
         </content>
      </ScrollPane>
   </center>
   <right>
      <BorderPane fx:id="addEquipmentPane" BorderPane.alignment="CENTER" />
   </right>
   <top>
      <BorderPane prefHeight="45.0" BorderPane.alignment="CENTER">
         <left>
            <HBox prefWidth="400.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="backButton" mnemonicParsing="false" onAction="#backToResults" prefWidth="80.0" text="Назад">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets left="10.0" top="8.0" />
               </padding>
            </HBox>
         </left>
         <right>
            <HBox alignment="TOP_RIGHT" prefHeight="40.0" prefWidth="400.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="addEquipmentButton" mnemonicParsing="false" onAction="#addToComparison" prefWidth="160.0" text="Добавить устройства">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <padding>
                  <Insets right="10.0" top="8.0" />
               </padding>
            </HBox>
         </right>
      </BorderPane>
   </top>
</BorderPane>
